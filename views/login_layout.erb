<!doctype html>
<html lang="en-US">
  <head>
    <title>Recipe Book</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>
  <body>
    <% [:success, :error].each do |flash_type|
      if session[flash_type] %>
        <div class="flash <%= flash_type.to_s %>">
          <p><%== session.delete(flash_type) %></p>
        </div>
      <% end %>
    <% end %>

    <main>
      <section id="login">
        <h1>Welcome to your Recipe Book!</h1>
        <%== yield %>
      </section>
    </main>
  </body>
</html>